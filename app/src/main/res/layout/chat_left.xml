<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameUserChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/abcdz"
        android:layout_marginLeft="40dp"
        android:text="alo alo"
        android:textSize="10dp"
        android:layout_marginBottom="1dp" />

    <RelativeLayout
        android:id="@+id/abcdz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameUserChat"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avtuser"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/user" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/avtuser"
            android:background="@drawable/bg_chat_left"
            android:padding="15px"
            android:text="Hello"
            android:textColor="#BEC1CA" />
    </RelativeLayout>
</RelativeLayout>